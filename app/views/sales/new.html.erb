<%= simple_form_for ([current_user, @product, @sale]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :tracking_number, label: "Enter your tracking number"%>
  <%= f.input :status, label: "Enter the status", collection: Sale::STATUS %>
  <%= f.submit "Add a sale", class: "btn btn-primary" %>
<% end %>



