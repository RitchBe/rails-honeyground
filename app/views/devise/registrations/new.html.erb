<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= f.error :base %>

<div class="container" style= "margin-top:50px">
  <div class="row col-xs-12 col-sm-4 col-sm-offset-4 form-container">
    <h1 class="yellow text-center"> SIGN UP</h1>
    <div class="form-inputs">
    <%= f.input :name, required: false %>
    <%= f.input :category, priority: ['User'], collection: ["User","Seller"], default: "User"%>
    <%= f.input :email, required: false %>
    <%= f.input :password, required: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: false %>
    <%= f.input :photo, as: :attachinary, label: "Add a photo" %>
</div>


  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: "confirm-btn" %>
<%= render "devise/shared/links" %>

</div>
<% end %>

</div>
</div>
